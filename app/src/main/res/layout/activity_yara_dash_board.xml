<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".Activity.YaraDashBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:background="#223458"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_weight=".8"
                android:gravity="center|center_horizontal"
                android:paddingLeft="@dimen/spacing_medium"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_weight=".2"
                android:src="@drawable/yara_logo" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:weightSum="1">



            <ScrollView
                android:id="@+id/sv1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:fillViewport="false"
                android:foregroundGravity="center|top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:layout_marginTop="@dimen/spacing_medium"

                    android:layout_gravity="bottom"
                    android:orientation="vertical">
                    <LinearLayout
                      android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/dashboard_card_color"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:contentPadding="10dp">

                            <LinearLayout
                                android:id="@+id/viewX"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/white"

                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/dashboard_card_color"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:contentPadding="10dp">

                            <LinearLayout
                                android:id="@+id/viewAddressModify"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Dealer Address Modify"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/white"

                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/show3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/dashboard_card_color"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:contentPadding="10dp">

                            <LinearLayout
                                android:id="@+id/viewInvoicedSO"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="View Invoiced SO"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/white"

                                    />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/dashboard_card_color"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:contentPadding="10dp">

                            <LinearLayout
                                android:id="@+id/viewPendingSO"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="View Pending SO"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/white"

                                    />
                                <TextView
                                    android:id="@+id/pendingSO"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/rating_c"

                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/show1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/dashboard_card_color"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:contentPadding="10dp">

                            <LinearLayout
                                android:id="@+id/viewTwoMonthsDispatchedSO"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="View 2 months Dispatched SO"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/white"

                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/dashboard_card_color"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp"
                            app:contentPadding="10dp">

                            <LinearLayout
                                android:id="@+id/enterSalesOrder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Enter Sales Order"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/white"

                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>




</LinearLayout>

